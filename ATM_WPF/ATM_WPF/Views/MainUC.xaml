<UserControl x:Class="ATM_WPF.Views.MainUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ATM_WPF.Views"
             mc:Ignorable="d" 
             Background="#FFE4FFBF"
             d:DesignHeight="450" d:DesignWidth="600">
    <Grid>
        <Label Content="{Binding Status}" Margin="0,54,0,0" Style="{StaticResource StatusInfoStyle}" Foreground="#FF010E06"/>
        <Button Content="Deposit" Command="{Binding DepositCommand}" Style="{StaticResource buttonStyle}" Margin="130,344,0,0"/>
        <Button Content="Withdraw" Command="{Binding WithdrawCommand}" Style="{StaticResource buttonStyle}"  Margin="315,344,0,0"/>
        <Label Content="Status" Margin="0,10,0,0" Style="{StaticResource HeaderStyle}" Background="#66022909"/>
    </Grid>
</UserControl>
